def mostrar_menu():
    print("\n--- Menú ---")
    print("1. Agregar alumno")
    print("2. Mostrar todos los alumnos")
    print("3. Eliminar alumno")
    print("4. Cerrar")

def validar_nombre(nombre):
    # Permite solo letras y espacios, y no acepta cadenas vacías
    return nombre.replace(" ", "").isalpha() and len(nombre.strip()) > 0

def agregar_alumno(lista_alumnos):
    nombre = input("Ingrese el nombre del alumno: ").strip()
    if validar_nombre(nombre):
        lista_alumnos.append(nombre)
        print(f"Alumno {nombre} agregado.")
    else:
        print("Nombre inválido. Solo se permiten letras y espacios.")

def mostrar_alumnos(lista_alumnos):
    if len(lista_alumnos) > 0:
        print("\n--- Lista de Alumnos ---")
        for alumno in lista_alumnos:
            print(alumno)
    else:
        print("No hay alumnos registrados.")

def eliminar_alumno(lista_alumnos):
    nombre = input("Ingrese el nombre del alumno a eliminar: ").strip()
    if not validar_nombre(nombre):
        print("Nombre inválido. Solo se permiten letras y espacios.")
        return
    if nombre in lista_alumnos:
        lista_alumnos.remove(nombre)
        print(f"Alumno {nombre} eliminado.")
    else:
        print(f"El alumno {nombre} no está en la lista.")

def main():
    lista_alumnos = []
    
    while True:
        mostrar_menu()
        opcion = input("Seleccione una opción (1/2/3/4): ")
        
        if opcion == '1':
            agregar_alumno(lista_alumnos)
        elif opcion == '2':
            mostrar_alumnos(lista_alumnos)
        elif opcion == '3':
            eliminar_alumno(lista_alumnos)
        elif opcion == '4':
            print("Cerrando el programa...")
            break
        else:
            print("Opción no válida, por favor elija una opción válida.")

if __name__ == "__main__":
    main()
